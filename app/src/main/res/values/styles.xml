<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btnText22medium">
        <item name="android:textColor">@color/primaryBlack</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_22</item>
        <item name="android:fontFamily">@font/ysmedium</item>
    </style>

    <style name="btnMain" parent="btnText22medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/icon_padding8</item>
        <item name="cornerRadius">@dimen/icon_padding8</item>
        <item name="backgroundTint">@color/white</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding8</item>
        <item name="iconTint">@color/primaryBlack</item>

    </style>

    <style name="txtWhiteMedium22">
        <item name="android:textSize">@dimen/main_text_22</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ysmedium</item>
    </style>

    <style name="txtRegular16">
        <item name="android:textSize">@dimen/second_text_16</item>
        <item name="android:textColor">@color/secondaryBlack</item>
        <item name="android:fontFamily">@font/yandexsansdisplayregular</item>
    </style>

    <style name="MySwitch" parent="txtRegular16">
        <item name="colorControlActivated">@color/backgroundBlueLight</item>
        <item name="colorSwitchThumbNormal">@color/settingGray</item>
        <item name="android:colorForeground">@color/settingGray</item>
    </style>
</resources>