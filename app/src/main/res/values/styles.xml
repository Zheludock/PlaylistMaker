<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="btnText22medium">
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="drawableTint">?attr/colorOnPrimaryContainer</item>
    </style>

    <style name="btnMain" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_margin">@dimen/dp8</item>
        <item name="cornerRadius">@dimen/dp8</item>
        <item name="backgroundTint">?attr/colorSecondary</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/dp8</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/main_text_22</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="txtWhiteMedium22">
        <item name="android:textSize">@dimen/main_text_22</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="txtRegular16">
        <item name="android:textSize">@dimen/second_text_16</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="drawableTint">?attr/colorButtonNormal</item>
    </style>

    <style name="MySwitch" parent="txtRegular16">
        <item name="trackTint">@drawable/switch_track_selector</item>
        <item name="thumbTint">@drawable/switch_thumb_selector</item>
    </style>
</resources>